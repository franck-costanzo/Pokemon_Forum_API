<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Smogon_MAUIapp.Pages.SubForum"
             Title="SubForum"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout>
        <Label x:Name="previousPage" TextColor="Blue" HorizontalOptions="Start">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="PreviousPageTapped"/>
            </Label.GestureRecognizers>
        </Label>

        <StackLayout x:Name="loadingImage" 
                     IsVisible="False" 
                     VerticalOptions="CenterAndExpand" 
                     HorizontalOptions="CenterAndExpand">
            <Image x:Name="pokeball" Source="Resources/Images/load.gif" IsAnimationPlaying="True" HeightRequest="100"/>
            <Label Text="Loading..." HorizontalTextAlignment="Center"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>