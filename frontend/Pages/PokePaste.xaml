<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Smogon_MAUIapp.Pages.PokePaste"
             Title="NewPage1">
    <VerticalStackLayout>
        <Label Text="Pokeaste"  FontAttributes="Bold"
                   FontSize="18"
                   HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
                   Background="#8d8dcd" TextColor="White" HeightRequest="50"/>
        
        <WebView Margin="10" HeightRequest="500"
                 HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                 x:Name="pokepasteView" Source="https://pokepast.es/" 
                 />
        <Label Text="Once you have submitted your build and the new page loaded you can click the button below!" Margin="20, 0"/>
        <Button Text="saveAddress" Clicked="SaveClicked"/>
    </VerticalStackLayout>
</ContentPage>