<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Smogon_MAUIapp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Smogon_MAUIapp"
    Shell.FlyoutBehavior="Disabled">


    <!--Main Page-->
    <TabBar>

        <Tab Icon="Resources/navbar/smogon.png">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:Pages.MainPage}"
                Route="MainPage" />            
        </Tab>

        <Tab Icon="Resources/Images/search.png">
            <ShellContent
            Title="Login"
            ContentTemplate="{DataTemplate local:Pages.Search}"
            Route="Login" />
        </Tab>

        <Tab Icon="Resources/Images/snorlax.png">
            <ShellContent
                Title="Login"
                ContentTemplate="{DataTemplate local:Pages.Profile}"
                Route="Login" />
        </Tab>

        <Tab Icon="Resources/Images/showdown.png">

        </Tab>

    </TabBar>

</Shell>
